<UserControl x:Class="PicDB.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PicDB"
             mc:Ignorable="d" >


    <Grid>
        

        <Menu>
            <MenuItem Header="_Photographers">
                <MenuItem Header="_Add" Command="{Binding OpenCreatePhotographerWindow}"/>
                <MenuItem Header="_View" Command="{Binding OpenViewPhotographerWindow}"/>
            </MenuItem>
            <MenuItem Header="_Camera">
                <MenuItem Header="_Add" Command="{Binding OpenCreateCameraWindow}"/>
                <MenuItem Header="_View" Command="{Binding OpenViewCameraWindow}"/>
            </MenuItem>
        </Menu>
    </Grid>
</UserControl>
